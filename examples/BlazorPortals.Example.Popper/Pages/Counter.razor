@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button @ref="_buttonRef" class="btn btn-secondary" @onclick="() => _isOpen = !_isOpen">Click for count</button>

<Popper AnchorRef="_buttonRef" @bind-Open="_isOpen" Placement="bottom" AutoClose>
    <Content>
        <div style="padding: 5px 10px; border: 1px solid rgba(0,0,0, 0.2); border-radius: 6px; background-color: #fff;">
            The count is @currentCount
        </div>
    </Content>
</Popper>

@code {
    private int currentCount = 0;
    private bool _isOpen;

    private ElementReference _buttonRef;

    private void IncrementCount()
    {
        currentCount++;
    }
}
